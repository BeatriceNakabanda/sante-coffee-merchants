<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FDF7F6"
    tools:context=".ManagersListActivity">

    <include layout="@layout/toolbar_main"
        android:id="@+id/main_toolbar"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/managersRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="55dp"
        tools:listitem="@layout/item_manager_list"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/coopManagerfab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:src="@drawable/ic_baseline_person_add_24"
        android:contentDescription="@string/add_farmer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>